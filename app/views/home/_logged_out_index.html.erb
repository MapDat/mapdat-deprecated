<div class="container">
  <div id="sideBar-left" class="clicked-left">
    <div class="searchBar">
      <div id="search-input">
          <div class="input-group col-md-12">
              <input type="text" class="form-control input-lg" placeholder="Search" />
              <span class="input-group-btn">
                  <button class="btn-info btn-lg" type="button">
                    <i class="fa fa-search" aria-hidden="true"></i>
                  </button>
              </span>
          </div>
      </div>
    </div>
    <div class="sideBar-tab">
      <button class="btn-info btn-lg" id="leftside-btn" type="button">
        <i class="fa fa-chevron-right" aria-hidden="true"></i>
      </button>
    </div>
    <div class="cover">
      <img src="http://static.panoramio.com/photos/large/53625922.jpg" alt="" />
    </div>
    <div class="title">
      <h3>Marston Science Library</h3>
      <h5>Library</h5>
    </div>
  </div>
  <a href="/signup"><button type="button" class="btn signup-btn" name="button">Sign Up</button></a>
  <button type="button" class="btn login-btn" name="button">Log In</button>
  <div class="login-container login-clicked-container">
    <%= render "sessions/form" %>
  </div>

</div>
<%= @output %>

<%= map(:center => {
  :latlng => [51.52238797921441, -0.08366235665359283],
  :zoom => 18
}) %>

<script>

$(document).ready(function(){


      $('#leftside-btn').click(function(){
        if( $('#sideBar-left').hasClass('clicked-left')){
          $('#sideBar-left').removeClass('clicked-left');
        } else {
          $('#sideBar-left').addClass('clicked-left');
        }
          console.log("AWWWW YEAHHHH");
      });

      $('.login-btn').click(function(){
        $('.login-btn').toggleClass('login-clicked');
        $('.login-container').toggleClass('login-clicked-container');
        $('input').toggleClass('login-clicked-form');
        $('h4').toggleClass('login-clicked-h4');
        $('.signup-btn').toggleClass('login-clicked-signup');
      });

      map.zoomControl.setPosition('bottomright');

 });
</script>
