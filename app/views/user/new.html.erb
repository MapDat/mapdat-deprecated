<!-- app/views/users/new.html.erb -->

<%= stylesheet_link_tag "login" %>

<div class="container">

<div class="col-xs-12">
  <%= form_for :user, url: '/users' do |f| %>
    <h4>Email</h4> <%= f.text_field :email %>
    <h4>First Name</h4> <%= f.text_field :first_name %>
    <h4>Last Name</h4> <%= f.text_field :last_name %>
    <h4>Password</h4> <%= f.password_field :encrypted_password %>
    <%= f.submit "Submit" %>
  <% end %>

</div>

</div>
